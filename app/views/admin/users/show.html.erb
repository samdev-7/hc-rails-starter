<div class="max-w-4xl mx-auto py-8">
  <div class="flex items-center gap-4 mb-6">
    <img src="<%= @user.avatar %>" alt="<%= @user.display_name %>" class="w-16 h-16 rounded-full">
    <div>
      <h1 class="font-bold text-4xl"><%= @user.display_name %></h1>
      <p class="text-gray-500"><%= @user.email %></p>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4 mb-6">
    <div>
      <span class="text-sm text-gray-500">Roles</span>
      <p><%= @user.roles.join(", ") %></p>
    </div>
    <div>
      <span class="text-sm text-gray-500">Timezone</span>
      <p><%= @user.timezone %></p>
    </div>
    <div>
      <span class="text-sm text-gray-500">Joined</span>
      <p><%= @user.created_at.strftime("%B %d, %Y") %></p>
    </div>
    <div>
      <span class="text-sm text-gray-500">Banned</span>
      <p><%= @user.is_banned ? "Yes" : "No" %></p>
    </div>
  </div>

  <h2 class="font-bold text-2xl mb-4">Projects (<%= @projects.size %>)</h2>

  <% if @projects.any? %>
    <table class="w-full border-collapse">
      <thead>
        <tr class="border-b text-left">
          <th class="py-2 px-3">Name</th>
          <th class="py-2 px-3">Ships</th>
          <th class="py-2 px-3">Unlisted</th>
          <th class="py-2 px-3">Created</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr class="border-b hover:bg-gray-50">
            <td class="py-2 px-3"><%= link_to project.name, admin_project_path(project), class: "text-blue-600 hover:underline" %></td>
            <td class="py-2 px-3"><%= project.ships.size %></td>
            <td class="py-2 px-3"><%= project.is_unlisted ? "Yes" : "No" %></td>
            <td class="py-2 px-3"><%= project.created_at.strftime("%b %d, %Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-gray-500">No projects yet.</p>
  <% end %>
</div>
