<div class="max-w-2xl mx-auto py-8">
  <h1 class="font-bold text-4xl mb-2">Review Ship #<%= @ship.id %></h1>
  <p class="text-gray-500 mb-6">for <%= @ship.project.name %> by <%= @ship.project.user.display_name %></p>

  <%= form_with(model: @ship, url: admin_ship_path(@ship), class: "space-y-4") do |f| %>
    <% if @ship.errors.any? %>
      <div class="bg-red-50 text-red-700 p-4 rounded mb-4">
        <ul>
          <% @ship.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :status, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :status, Ship.statuses.keys.map { |s| [s.capitalize, s] }, {}, class: "mt-1 block w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :feedback, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :feedback, rows: 4, class: "mt-1 block w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :justification, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :justification, class: "mt-1 block w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :approved_seconds, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :approved_seconds, class: "mt-1 block w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.submit "Update Ship", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
