<div class="max-w-6xl mx-auto py-8">
  <h1 class="font-bold text-4xl mb-6">Admin: Projects</h1>

  <table class="w-full border-collapse">
    <thead>
      <tr class="border-b text-left">
        <th class="py-2 px-3">Name</th>
        <th class="py-2 px-3">Owner</th>
        <th class="py-2 px-3">Ships</th>
        <th class="py-2 px-3">Unlisted</th>
        <th class="py-2 px-3">Created</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr class="border-b hover:bg-gray-50">
          <td class="py-2 px-3"><%= link_to project.name, admin_project_path(project), class: "text-blue-600 hover:underline" %></td>
          <td class="py-2 px-3"><%= link_to project.user.display_name, admin_user_path(project.user), class: "text-blue-600 hover:underline" %></td>
          <td class="py-2 px-3"><%= project.ships.size %></td>
          <td class="py-2 px-3"><%= project.is_unlisted ? "Yes" : "No" %></td>
          <td class="py-2 px-3"><%= project.created_at.strftime("%b %d, %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
