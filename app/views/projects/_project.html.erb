<div class="border rounded-lg p-4 mb-4">
  <div class="flex items-center justify-between">
    <h2 class="text-xl font-semibold"><%= link_to project.name, project, class: "hover:underline" %></h2>
    <% if project.is_unlisted %>
      <span class="text-sm text-gray-500">Unlisted</span>
    <% end %>
  </div>

  <% if project.description.present? %>
    <p class="text-gray-600 mt-2"><%= truncate(project.description, length: 200) %></p>
  <% end %>

  <% if project.tags.any? %>
    <div class="flex flex-wrap gap-2 mt-2">
      <% project.tags.each do |tag| %>
        <span class="bg-gray-100 text-gray-700 text-sm px-2 py-1 rounded"><%= tag %></span>
      <% end %>
    </div>
  <% end %>

  <div class="flex gap-4 mt-3 text-sm text-gray-500">
    <span>by <%= project.user.display_name %></span>
    <span><%= project.ships.count %> ships</span>
  </div>
</div>
